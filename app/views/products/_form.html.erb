<%= form_for product do |f| %>
  <%#= render "shared/errors", object: product %>
  <% if product.errors.any? %>
    <div id="display_error">
      <h2>Uh-oh! There were <%= pluralize(product.errors.count, "error") %></h2>
      <ul>
        <%= product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :price_in_cents %>
    <%= f.text_field :price_in_cents %>
  </div>

  <%= f.submit %>

<% end %>
